<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettngsActivity">
    <include
        layout = "@layout/app_bar_layout"
        android:id="@+id/settings_toolbar"></include>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"

        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"/>
    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:textAlignment="center"
        android:hint="username"
        android:drawableStart="@drawable/edit_profile"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"></EditText>
    <EditText
        android:id="@+id/set_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_name"
        android:textAlignment="center"
        android:hint="hey i am online"
        android:drawableStart="@drawable/edit_status"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"></EditText>
    <EditText
        android:id="@+id/set_user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_profile_status"
        android:textAlignment="center"
        android:hint="set your city"
        android:drawableStart="@drawable/edit_status"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"></EditText>
    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_city"
        android:text="update"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:textColor="@color/cardview_light_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="10dp"></Button>



</RelativeLayout>