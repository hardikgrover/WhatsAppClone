<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:id="@+id/message_profile_image"
        android:src="@drawable/profile_image"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/reciever_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/reciever_messages_layout"
        android:text="reciever messsages here"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"

        ></TextView>
    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"></ImageView>
    <ImageView
        android:id="@+id/message_reciever_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"></ImageView>
    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="@+id/reciever_message_text"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/reciever_message_text"
        android:background="@drawable/sender_messages_resource_file"
        android:text="sender messsages here"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        ></TextView>


</RelativeLayout>












